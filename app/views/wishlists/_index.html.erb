<% if current_user.wishlists.present?%>

  <div class="col-lg-6 well", style: "margin-left: 15px" >
    
      <div class="col-lg-3">
        <% if wishlist.product.pictures.first.present? %>
          <%= link_to product_path(wishlist.product.id) do %>
            <%= image_tag(wishlist.product.pictures.first.image.url,class: 'cart-image', style: "width:100px;height:100px") %>
          <%end%>
        <%end%>
      </div>
      <div class="col-lg-6">
        <%= link_to product_path(wishlist.product.id) do %>
          <%= wishlist.product.name%><br><br>
        <%end%>
        Rs <%=wishlist.product.price%>
      </div>
      <div class="col-lg-3">
        <%= link_to cart_items_path(product_id: wishlist.product.id),method: :post, class: "fa fa-shopping-cart btn btn-default add-to-cart" do%>
          Add to Cart
        <%end%>
        <%= link_to wishlist_path(wishlist.product.id),method: :delete,remote: true do%>
          <i class="fa fa-trash-o"></i>
          Delete
        <%end%>
      </div>
  </div>
  
<% else %>
      <div class="emptyWishlist">
        <h3>Empty Wishlist...!</h3>
      </div>
<%end%>