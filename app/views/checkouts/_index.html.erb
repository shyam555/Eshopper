<% if current_user.cart_items.present? %>
  <section id="cart_items">
    <div class="container">
      <div class="breadcrumbs">
        <ol class="breadcrumb">
          <li><a href="#">Home</a></li>
          <li class="active">Check out</li>
        </ol>
      </div><!--/breadcrums-->

      <div class="step-one">
        <h2 class="heading">Step1</h2>
      </div>
      <%= button_tag "Add new address", class: "btn btn-primary", "data-toggle" => "modal","data-target" => "#myModal"%>
      <div class="shopper-informations">
        <div class="row">
          <% if current_user.addresses.present? %>
            <div class="container">
                <%if current_user.addresses.where(status: 'active').present? %>
                  <div class="panel panel-info">
                    <div class="panel-body">
                      <% current_user.addresses.where(status: 'active').each do |address| %>
                          <div class="col-lg-4 well", style: "margin-left: 15px" >
                              <span><h4>Name: <%= address.name%></h4></span><br>
                              <span>Email: <%= address.email%></span><br>
                              <span>Address: <%= address.address_one%> <%=address.address_two%></span><br>
                              <span>PIN: <%= address.zip_code%></span><br><br>  
                              <span id = 'delete_address_<%=address.id%>'>
                              <%= link_to "Delete Address", address_path(address, status: 'delete'), method: :put, data: { confirm: 'you want to delete?'}%>
                                <%#= link_to "delete", address_path(address), method: :delete, data: { confirm: 'you want to delete?'}%></span>
                              <%#= link_to "update", edit_address_path(address)  %>

                              <%#= link_to "Update", edit_address_path(address), remote: true, "data-toggle" => "modal","data-target" => "#myModal1"%>
                              <br><br>

                              <%= link_to "Deliver on this addresss",  payment_review_path(address_id: address.id),class: "btn btn-default check_out"%>
                          </div>  
                      <% end %>
                    </div>
                  </div>
                <%end%>
            </div>
          <%end%>
            <div class="modal fade" id="myModal" role="dialog">
              <br><%= render 'checkouts/address_model_form' %> 
            </div>
            <div class="modal fade" id="myModal1" role="dialog">
             
            </div>

          
        </div>
      </div>
      <div class="review-payment">
        <h2>Review & Payment</h2>
      </div>

      <div class="cart_info">
        <table class="table table-condensed">
          <thead>
            <tr class="cart_menu">
              <td class="image">Item</td>
              <td class="description"></td>
              <td class="price">Price</td>
              <td class="quantity">Quantity</td>
              <td class="total">Total</td>
              <td></td>
            </tr>
          </thead>
          <tbody>
            <% current_user.cart_items.each do |cart_item| %>
              <tr>
                <td class="cart_product">
                  <% if cart_item.product.pictures.first.present? %>
                    <%= image_tag(cart_item.product.pictures.first.image.url,class: 'cart-image', style: "width:100px;height:100px") %>
                  <%end%>
                </td>

                <td class="cart_description">
                  <h4 class="product_desc_align"><%= cart_item.product.name %></h4>
                </td>

                <td class="cart_price">
                  <p>&#8377; <%= cart_item.product.price %></p>
                </td>

                <td class="cart_quantity">
                  <div class="cart_quantity_button">
                    <!-- <a class="cart_quantity_up" href=""> + </a> -->
                    <%= link_to "+", cart_item_path(id: cart_item,qty: "plus"), method: :put ,class: "cart_quantity_up", :remote => true %>

                    <%= number_field_tag :quantity, nil, min: 1, max: 20, onfocusout:"updateQuantity(#{cart_item.id},#{cart_item.product.id})", id: "#{cart_item.id}" ,class: "cart_quantity_input" , :remote => true, :value => cart_item.quantity %>

                    <%#binding.pry%>
                    <!-- <input id="cart_item_count_<%= cart_item.id %>" class="cart_quantity_input" type="number" min="1" max="10" name="quantity" value="<%= cart_item.quantity %>" autocomplete="off" size="2"> -->
                   

                    <%= link_to "-", cart_item_path(cart_item,qty: "minus"), method: :put ,class: "cart_quantity_down", :remote => true %>
                  </div>
                </td>
                <td class="cart_total" >
                  <% @total = cart_item.product.price * cart_item.quantity %>
                  <p id="sub_total_<%= cart_item.id %>" class="cart_total_price">&#8377; <%= @total %></p>
                </td>

                <td class="cart_delete">
                  <%= link_to cart_item_path(cart_item), method: :delete, data: { confirm: 'you want to delete item from cart?' }, :remote => true, :class => "delete_item_#{cart_item.id}" do %><i class="fa fa-times"></i><% end %>
                </td>
              </tr>
            <% end %>
            <tr>
              <td colspan="4">&nbsp;</td>
              <td colspan="2">
                <table class="table table-condensed total-result">
                  <tr>
                    <td>Cart Sub Total</td>
                    <td><div id="cart_sub_total">&#8377; <%=@sub_total%></div></td>
                  </tr>
                  <tr>
                    <td>Exo Tax</td>
                    <td><div id="tax">&#8377; <%= @tax %></div></td>
                  </tr>
                  <tr class="shipping-cost">
                    <td>Shipping Cost</td>
                    <td><div id="shipping_cost">&#8377; <%= @shipping_cost %></div></td>                   
                  </tr>
                  <tr>
                    <td>Total</td>
                    <td><span id="sub_sub_total_">&#8377; <%= @final_total %></td>
                  </tr>

                </table>
                <%#= submit_tag "continue", class: "btn btn-primary", onClick: "$('#submit-form').submit()"%>
              </td>

            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </section> <!--/#cart_items-->
<%else%>
  <section id="cart_items">
    <div class="container">
      <div class="cart_info">
        <h3>Empty Cart</h3>
      </div>
    </div>
  </section>

<%end%>



