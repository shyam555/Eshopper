<div class="modal-dialog model_dialog_one">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Add New Address</h4>
    </div>
    <div class="modal-body">
      <div class="shopper-informations">
        <div class="row">
          <%= form_for @addresses, :html => { :id=>'submit-form'} do |f| %>
            <div class="col-sm-12 clearfix">                 
              <div class="bill-to">
                <div class="form-one">
                    <%= f.text_field :name, placeholder: "Name", required: "required" %>
                    <%= f.email_field :email, placeholder: "Email", required: "required" %>
                    
                    <%= f.text_field :address_one, placeholder: "Address1", required: "required" %>
                    <%= f.text_field :address_two, placeholder: "Address2" %>
                    <%= f.number_field :zip_code, placeholder: "Zip / Postal Code", required: "required" %>
                    <%= f.text_field :mobile_number, placeholder: "Mobile Phone", required: "required" %>
                    <%= f.hidden_field :status, :value => 'active' %>
                </div>
              </div>
                <%= f.submit "Submit", class: "btn btn-primary" %>        
            </div>
          <% end %>  
        </div>
    </div>
    <div class="modal-footer">
      <%= submit_tag 'Cancel', :type => :reset, :class => "btn btn-danger", "data-dismiss" => "modal", "aria-hidden" => "true" %>
    </div>
  </div>     
</div>
  
