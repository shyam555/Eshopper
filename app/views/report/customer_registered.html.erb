<div id="customerRegisteredChart" style="width:80%; height:400px;"></div>
<script type="text/javascript">
Highcharts.chart('customerRegisteredChart', {
    chart: {
        type: 'column'
    },
    title: {
        text: 'Registration details. January, 2017 to Dec, 2017'
    },
    subtitle: {
        
    },
    xAxis: {
        type: 'category'
    },
    yAxis: {
        title: {
            text: 'Total user registred'
        }

    },
    legend: {
        enabled: false
    },
    plotOptions: {
        series: {
            borderWidth: 0,
            dataLabels: {
                enabled: true,
                format: '{point.y:.1f}'
            }
        }
    },

    tooltip: {
        headerFormat: '<span style="font-size:11px">{series.name}</span><br>',
        pointFormat: '<span style="color:{point.color}">{point.name}</span>: <b>{point.y:.2f}%</b> of total<br/>'
    },

    series: [{
        name: 'Users',
        colorByPoint: true,
        data: [
        <% @months.each_with_index do |month,i|%>
        {
            name: '<%=month%>',
            y: <%=@total_users[i]%>
        },
        <%end%>

        ]
    }]
});
</script>